{
  "name": "@bunary/core",
  "version": "0.2.0",
  "description": "Foundation module for Bunary - config, environment, and app helpers",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun && bunx tsc -p tsconfig.build.json",
    "typecheck": "bunx tsc --noEmit",
    "test": "bun test",
    "lint": "bunx biome check ./src"
  },
  "keywords": [
    "bunary",
    "bun",
    "backend",
    "framework",
    "config"
  ],
  "author": "Paul Radford",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bunary-dev/core.git"
  },
  "homepage": "https://github.com/bunary-dev/core#readme",
  "bugs": {
    "url": "https://github.com/bunary-dev/core/issues"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "bun-types": "latest"
  }
}
